# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secure-secret-key-min-32-chars

# JWT configuration
JWT_SECRET=your-jwt-secret-key-here-make-it-secure

# Database connection string (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/job_board?schema=public"

# For direct database connections (needed for Prisma in serverless environments)
DIRECT_URL="postgresql://username:password@localhost:5432/job_board?schema=public"

# For Prisma Accelerate (optional)
# PRISMA_ACCELERATE_URL="prisma://accelerate.prisma-data.net/?api_key=your_api_key"

# Email service for password reset (optional)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=no-reply@your-domain.com

# Optional: Upload service (for profile pictures, resumes, etc.)
UPLOAD_API_KEY=your-upload-service-api-key
UPLOAD_API_SECRET=your-upload-service-api-secret

# Optional: Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Node environment
NODE_ENV=development 