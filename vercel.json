{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXTAUTH_URL": "https://your-deployment-url.vercel.app"
  },
  "regions": ["cdg1"],
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": ".next"
} 